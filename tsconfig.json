{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "node16",
    "target": "es2022",
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "experimentalResolver": true
  }
}
